{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Remote",
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Current TS File",
            "runtimeExecutable": "${workspaceFolder}/scripts/runTS.sh",
            "runtimeArgs": [
                "${relativeFile}"
            ],
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "address": "localhost",
            "remoteRoot": "/app",
            "outputCapture": "std",
            "protocol": "inspector",
            "sourceMaps": true,
            "outFiles": [
                "dist"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Current TS Test File",
            "runtimeExecutable": "${workspaceFolder}/scripts/runTSSpec.sh",
            "runtimeArgs": [
                "${relativeFile}"
            ],
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "address": "localhost",
            "remoteRoot": "/app",
            "outputCapture": "std",
            "protocol": "inspector",
            "sourceMaps": true,
            "outFiles": [
                "dist"
            ]
        }, {
            "type": "node",
            "request": "launch",
            "name": "Debug Node",
            "runtimeExecutable": "${workspaceFolder}/scripts/runDebugNode.sh",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "address": "localhost",
            "remoteRoot": "/app",
            "outputCapture": "std",
            "protocol": "inspector",
            "sourceMaps": true,
            "outFiles": [
                "dist"
            ]
        }, {
            "type": "node",
            "request": "launch",
            "name": "Debug Mocha",
            "runtimeExecutable": "${workspaceFolder}/scripts/runDebugTest.sh",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "address": "localhost",
            "remoteRoot": "/app",
            "outputCapture": "std",
            "protocol": "inspector",
            "sourceMaps": true,
            "outFiles": [
                "dist"
            ]
        }
    ]
}